<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <android.support.v7.widget.CardView
        style="@style/CardViewsStyle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/margin_small">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv_consignee"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="总有叼毛把朕当机关枪"
                    android:textColor="@color/def_text_black"
                    android:textSize="@dimen/text_size_normal" />

                <TextView
                    android:id="@+id/tv_number"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/margin_normal"
                    android:text="(13388886666)"
                    android:textColor="@color/def_text_mid"
                    android:textSize="@dimen/text_size_normal" />

            </LinearLayout>

            <TextView
                android:id="@+id/tv_address"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin_small"
                android:text="广东江门市蓬江区地王广场"
                android:textColor="@color/def_text_light"
                android:textSize="@dimen/text_size_normal" />

            <View
                style="@style/HorizontalLine"
                android:layout_marginBottom="@dimen/margin_small"
                android:layout_marginTop="@dimen/margin_small" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <CheckBox
                    android:id="@+id/check_box"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:button="@drawable/selector_cb_style_green"
                    android:gravity="center_vertical"
                    android:paddingLeft="@dimen/padding_small"
                    android:text="@string/set_as_default"
                    android:textColor="@color/select_tv_style_black" />

                <TextView
                    android:id="@+id/tv_edit"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:background="?attr/selectableItemBackground"
                    android:drawableLeft="@drawable/icon_edit_32"
                    android:drawablePadding="@dimen/padding_small"
                    android:gravity="center_vertical"
                    android:paddingLeft="@dimen/padding_tiny"
                    android:paddingRight="@dimen/padding_tiny"
                    android:text="@string/edit"
                    android:textColor="@color/def_text_black" />

                <TextView
                    android:id="@+id/tv_delete"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="@dimen/margin_big"
                    android:background="?attr/selectableItemBackground"
                    android:drawableLeft="@drawable/icon_trash_32"
                    android:drawablePadding="@dimen/padding_small"
                    android:gravity="center_vertical"
                    android:paddingLeft="@dimen/padding_tiny"
                    android:paddingRight="@dimen/padding_tiny"
                    android:text="@string/delete"
                    android:textColor="@color/def_text_black" />

            </LinearLayout>

        </LinearLayout>

    </android.support.v7.widget.CardView>

</LinearLayout>